{
  "name": "babi-ebook-portal",
  "private": true,
  "version": "0.6.8",
  "type": "module",
  "main": "electron/main.cjs",
  "description": "Portable E-book Manager",
  "author": "Watchara Sukka",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on tcp:5173 && electron . --no-sandbox\"",
    "prebuild:electron": "npm run build",
    "build:electron": "electron-builder",
    "prebuild:mac": "npm run build",
    "build:mac": "electron-builder --mac",
    "prebuild:win": "npm run build",
    "build:win": "electron-builder --win"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.7.3",
    "lucide-react": "^0.562.0",
    "pdfjs-dist": "^3.11.174",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sql.js": "^1.13.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.1.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^6.0.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.iconnext.babi",
    "productName": "Babi E-book Portal",
    "directories": {
      "output": "../dist-electron-vite"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,spec,specs}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.map"
    ],
    "asar": true,
    "npmRebuild": false,
    "asarUnpack": [
      "**/*.wasm"
    ],
    "compression": "normal",
    "mac": {
      "icon": "public/logo-full.png",
      "electronLanguages": [
        "en",
        "th"
      ],
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "category": "Office",
      "target": [
        "AppImage",
        "snap"
      ]
    },
    "win": {
      "icon": "public/logo-full.png",
      "electronLanguages": [
        "en",
        "th"
      ],
      "target": [
        "portable"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "watchara-sukka",
        "repo": "iconnext.babi",
        "releaseType": "release"
      }
    ]
  }
}